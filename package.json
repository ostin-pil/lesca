{
  "name": "lesca",
  "version": "0.1.0",
  "description": "Modular LeetCode Scraper Architecture - A powerful, extensible LeetCode content scraper",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared/*"
  ],
  "scripts": {
    "test:graphql": "tsx test-graphql.ts",
    "dev": "tsx watch packages/cli/src/index.ts",
    "build": "npm run clean && tsc -b tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "clean": "rm -rf dist packages/*/dist shared/*/dist",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "test": "npm run test:unit",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage --config vitest.unit.config.ts",
    "test:coverage:all": "vitest run --coverage --config vitest.integration.config.ts",
    "check-coverage": "tsx scripts/check-coverage.ts",
    "benchmark": "tsx tests/benchmarks/scraping-performance.bench.ts && tsx tests/benchmarks/cache-performance.bench.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "leetcode",
    "scraper",
    "obsidian",
    "markdown",
    "graphql",
    "leetcode-api"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^20.10.6",
    "@types/turndown": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "@types/lodash-es": "^4.17.12",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "lodash-es": "^4.17.21",
    "ora": "^8.0.1",
    "p-throttle": "^6.1.0",
    "playwright": "^1.56.1",
    "turndown": "^7.1.2",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
